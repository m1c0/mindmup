<%
  if session['welcome'].nil?
    session['welcome'] = false
  elsif settings.online && session['welcome'] != settings.last_news_id 
    message=%Q{
    <strong><i class="icon-rss"></i>&nbsp;News flash: #{settings.last_news_title}!</strong> <a href="http://blog.mindmup.ru" target="_blank">Подробности тут</a>. 
      }
    session['welcome'] = settings.last_news_id
  end
if ! message.nil? then
%>
 <div id='welcome_message' data-message='<%=session['welcome']%>' class='alert alert-info'><button type='button' class='close' data-dismiss='alert'>&times;</button>
   <p>
   <%=message%></p>
 </div>
<% end %>
